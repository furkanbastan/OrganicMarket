@model OrderDto
<div class="my-5 container">
    <div class="row">
        <div class="card w-75 mb-4 border-1">
            <div class="card-body">
                <h4 class="card-title">Adres Bilgileri <i class="bi bi-pin-map"></i></h4>
                <h6 class="">Adrese Teslim <i class="bi bi-geo-alt-fill"></i></h6>
                <h6 class="">Teslimat Adreslerim :</h6>
                <form class="row" action="" method="post">
                    @foreach (var adress in Model.Adresses)
                    {
                        <div class="card col-3 m-3 border-0" style="width: 15rem;">
                            <div class="card-header">
                                <h5 class="card-title">@adress.Title</h5>
                            </div>
                            <div class="card-body">
                                <span class="card-text">@adress.Adress</span><br>
                                <span class="card-text">@adress.City</span><br>
                                <span class="card-text">@adress.District</span><br>
                                <span class="card-text">@adress.Neighbourhood</span><br>
                                <span class="card-text">@adress.Tel</span><br>
                            </div>
                            <div class="card-footer">
                                <a href="#" class="btn btn-outline-primary mb-2">Adresi Güncelle</a>
                                <a href="#" class="btn btn-outline-danger mb-2"><i class="bi bi-trash"></i></a>
                                <label for="@adress.Title" class="btn btn-outline-success">
                                    <input id="@adress.Title" asp-for="Adress" type="radio" name="adressSelect"
                                        value="@adress.Title" checked="@(Model.Adress==adress.Title)"> Adresi Seç</label>
                            </div>
                        </div>
                    }
                    <a class="card col-3 m-3 mb-4 border border-2 border-success btn btn-outline-success"
                        data-bs-toggle="modal" data-bs-target="#exampleModal" style="width: 10rem;">
                        <i class="bi bi-plus-lg mx-auto mt-auto"></i><span class="mx-auto mb-auto">Adres Ekle</span>
                    </a>

                    <h4 class="card-title mt-5">Ödeme Bilgileri <i class="bi bi-credit-card"></i></h4>
                    <div class="form-group mt-3">
                        <label class="form-check-label" for="cardNumber">Kredi Kartı Numarası:</label>
                        <input type="text" class="form-control" id="cardNumber" asp-for="CardNumber" name="CardNumber"
                            required>
                    </div>
                    <div class="form-group">
                        <label for="cvv">CVV:</label>
                        <input type="text" class="form-control" id="cvv" asp-for="CVV" name="CVV" required>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="expirationMonth">Son Kullanma Tarihi (Ay):</label>
                            <select class="form-control" id="expirationMonth" name="ExpirationMonth"
                                asp-for="ExpirationMonth" required>
                                <option value="">Seçiniz</option>
                                <option value="01">01</option>
                                <option value="02">02</option>
                                <!-- Diğer aylar -->
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="expirationYear">Son Kullanma Tarihi (Yıl):</label>
                            <select class="form-control" id="expirationYear" name="ExpirationYear"
                                asp-for="ExpirationYear" required>
                                <option value="">Seçiniz</option>
                                <option value="2023">2023</option>
                                <option value="2024">2024</option>
                                <option value="2024">2024</option>
                                <option value="2024">2024</option>
                                <option value="2024">2024</option>
                                <option value="2024">2024</option>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success m-4">Siparişi Tamamla</button>
                </form>
            </div>
        </div>

        <div class="card w-25 border-0">
            <div class="card-body">
                <div class="card-title">
                    <h2>Sipariş Detayı : </h2>
                    <br>
                    <h6>İndirim : @Model.Basket.Discount</h6>
                    <h6>Ürün Adedi : @Model.Basket.ProductCount</h6>
                    <h6>Kargo : @Model.Basket.ShippingPrice</h6>
                    <br>
                    <h6>Toplam : @Model.Basket.ShippingPrice</h6>
                </div>
            </div>
        </div>
    </div>



    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Adres Ekle</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <form method="post" class="">
                            <div class="row mb-4">
                                <div class="col">
                                    <label for="Tel" class="form-label">İl*</label>
                                    <input type="tel" class="form-control" id="Tel" aria-describedby="nameHelp">
                                    <div id="nameHelp" class="form-text">İl seçiniz.
                                    </div>
                                </div>
                                <div class="col">
                                    <label for="Surname" class="form-label">Posta Kodu*</label>
                                    <input type="text" class="form-control" id="Surname" aria-describedby="surnameHelp">
                                    <div id="surnameHelp" class="form-text">Posta kodunu giriniz.
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col">
                                    <label for="Tel" class="form-label">İlçe*</label>
                                    <input type="tel" class="form-control" id="Tel" aria-describedby="nameHelp">
                                    <div id="nameHelp" class="form-text">İlçe seçiniz.
                                    </div>
                                </div>
                                <div class="col">
                                    <label for="Surname" class="form-label">Mahalle*</label>
                                    <input type="text" class="form-control" id="Surname" aria-describedby="surnameHelp">
                                    <div id="surnameHelp" class="form-text">Mahalle seçiniz.
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col">
                                    <label for="Tel" class="form-label">Adres*</label>
                                    <textarea class="form-control" name="" id="Tel" cols="30" rows="10"
                                        aria-describedby="nameHelp"></textarea>
                                    <div id="nameHelp" class="form-text">Açık adres yazınız.
                                    </div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col">
                                    <label for="Tel" class="form-label">Adres Başlığı*</label>
                                    <input type="text" class="form-control" id="Surname" aria-describedby="surnameHelp">
                                    <div id="nameHelp" class="form-text">Adres Başlığı yazınız.
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">Adresi Ekle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>